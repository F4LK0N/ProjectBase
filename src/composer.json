{
    "require": {
        "php": "8.1.*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-xdebug": "3.1.5",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "slim/slim": "4.10",
        "slim/psr7": "1.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "Core\\Tests\\": "tests/core"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.*",
        "mockery/mockery": "1.5.*"
    },
    "scripts": {
        "da": "composer dumpautoload",
        "test": "./vendor/bin/phpunit --no-coverage ./tests",
        "testdox": "./vendor/bin/phpunit --testdox --no-coverage ./tests",
        "coverage": "./vendor/bin/phpunit --coverage-html ./tests-coverage-html ./tests",
        "clear": "rm -R ./tests-coverage-html"
    }
}
